@inherits LayoutComponentBase
@inject AuthService AuthService

<MudThemeProvider Theme="Theme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@DrawerToggle"/>
        <MudSpacer/>
        <MudButton Href="/login" OnClick="@Logout" Variant="Variant.Filled" DisableElevation="true" Color="Color.Secondary" Class="mr-4">Log Out</MudButton>
    </MudAppBar>
    <MudDrawer @bind-Open="drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <AuthorizeView Roles="User">
            <UserNavMenu/>
        </AuthorizeView>
        <AuthorizeView Roles="Doctor">
            <DoctorNavMenu/>
        </AuthorizeView>
        <AuthorizeView Roles="LabTechnician">
            <LabTechnicianNavMenu/>
        </AuthorizeView>
        <AuthorizeView Roles="Admin">
            <AdminNavMenu/>
        </AuthorizeView>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="my-10 px-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool drawerOpen = true;
    private readonly MudTheme Theme = new();

    void DrawerToggle()
    {
        drawerOpen = !drawerOpen;
    }

    private async Task Logout()
    {
        await AuthService.Logout();
    }

}
